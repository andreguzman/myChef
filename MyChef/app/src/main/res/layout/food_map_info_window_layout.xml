<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:id="@+id/foodMapInfoWindowContainer">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodInfoWindowImage"
        android:background="@drawable/common_signin_btn_icon_pressed_dark"
        android:layout_toLeftOf="@+id/foodNameRatingContainer"
        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodNameRatingContainer"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignTop="@+id/foodInfoWindowImage"
        android:layout_alignBottom="@+id/foodInfoWindowImage">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/foodNameText"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" />

        <RatingBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/foodRating"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_weight="1" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/foodPriceText"
        android:layout_toRightOf="@+id/foodNameRatingContainer"
        android:layout_alignTop="@+id/foodNameRatingContainer"
        android:layout_alignBottom="@+id/foodNameRatingContainer"
        android:gravity="center" />

</RelativeLayout>