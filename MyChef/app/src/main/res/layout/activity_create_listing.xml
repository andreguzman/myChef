<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="mychef.mychef.ui.CreateListingActivity"
    android:id="@+id/createListingContainer">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createListingMenu">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/createListingLabelText"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/cancelButtonText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/createButtonText"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/createListingFieldsScroll"
        android:layout_below="@+id/createListingMenu"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/createListingFieldsContainer">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addFoodPhotoImage"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_launcher" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/foodNameField"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/addFoodPhotoImage"
                android:hint="@string/food_name_field_help_text" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/descriptionButton"
                android:drawableRight="@drawable/ic_media_play"
                android:layout_below="@+id/foodNameField"
                android:layout_alignParentLeft="false"
                android:gravity="left|fill_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/categoriesButton"
                android:drawableRight="@drawable/ic_media_play"
                android:layout_below="@+id/descriptionButton"
                android:layout_alignParentLeft="false"
                android:gravity="left|fill_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/ingredientsButton"
                android:drawableRight="@drawable/ic_media_play"
                android:layout_below="@+id/categoriesButton"
                android:layout_alignParentLeft="false"
                android:gravity="left|fill_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/availabilityButton"
                android:drawableRight="@drawable/ic_media_play"
                android:layout_below="@+id/ingredientsButton"
                android:layout_alignParentLeft="false"
                android:gravity="left|fill_vertical" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/createListingButton"
                android:layout_below="@+id/foodPriceContainer"
                android:gravity="center_vertical|center_horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/foodPriceContainer"
                android:layout_below="@+id/availabilityButton">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/foodPriceBackroundimage"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/common_signin_btn_text_focus_dark" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/foodPriceText"
                    android:layout_centerVertical="true"
                    android:layout_alignRight="@+id/foodPriceBackroundimage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/foodPriceLabelText"
                    android:layout_alignLeft="@+id/foodPriceBackroundimage"
                    android:layout_centerVertical="true" />
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
