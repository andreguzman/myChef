<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainActivityTopLevelContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <FrameLayout
        android:id="@+id/mainActivityMainContentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        </FrameLayout>

    <RelativeLayout
        android:id="@+id/mainActivityNavigationDrawerContainer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="left">

        <include layout="@layout/navigation_drawer_layout"
            android:id="@+id/navigationDrawerContainerContainer" />

        </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
